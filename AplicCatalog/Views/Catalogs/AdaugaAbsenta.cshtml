
@model AplicCatalog.Models.Catalog

@{
    ViewBag.Title = "Adauga Absenta";
}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>


<h2>Adauga Absenta</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="idClasa" id="idClasa" value="@ViewBag.idClasa">
    <input type="hidden" name="idElev" id="idElev" value="@ViewBag.idElev">

    <div class="form-horizontal">
        <h4>Catalog</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            @Html.Label("Nume Elev", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.TextBox("NumeElev", (string)ViewBag.NumeElev, new { id = "NumeElev", @readonly = "readonly" })

            </div>
        </div>
        <div class="form-group">

            @Html.Label("Nume Materie", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.TextBox("NumeMaterie", (string)ViewBag.NumeMaterie, new { id = "NumeMaterie", @readonly = "readonly" })

            </div>
        </div>

       <div class="form-group">
            @Html.LabelFor(model => model.DataAbsenta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.DataAbsenta, new { htmlAttributes = new {  @class = "form-control date-picker", onkeydown = "return false", onpaste = "return false" } })
                @Html.ValidationMessageFor(model => model.DataAbsenta, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adauga" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Inapoi la Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

  <script type="text/javascript">

     $(document).ready(function () {
         $('input[type=datetime]').datepicker({
             dateFormat: "dd/M/yy",
             changeMonth: true,
             changeYear: true,
             yearRange: "-60:+60"
         });

     });
    </script>
}


