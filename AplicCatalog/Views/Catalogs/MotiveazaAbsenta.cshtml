@model AplicCatalog.Models.Catalog

@{
    ViewBag.Title = "MotiveazaAbsenta";
}

<h2>MotiveazaAbsenta</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Catalog</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdNota)
        @Html.HiddenFor(model => model.IdxIncadrare)
        @Html.HiddenFor(model => model.IdMaterie)
       
        <div class="form-group">
            @Html.LabelFor(model => model.DataAbsenta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
              @Html.TextBoxFor(model => model.DataAbsenta, new { id = "DataAbsenta", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AbsentaMotivata, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.AbsentaMotivata)
                    @Html.ValidationMessageFor(model => model.AbsentaMotivata, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salveaza" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Inapoi la Lista", "Index")
</div>
