@model IEnumerable<AplicCatalog.Models.Elev>

@{
    ViewBag.Title = "Administrare Elevi";
}

<h2>Administrare Elevi</h2>

<p>
    @Html.ActionLink("Adauga", "Create")
</p>
<div style="height: 200px; overflow: auto;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tata)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mama)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tata)
                </td>
                <td>
                    @Html.ActionLink("Modifica", "Edit", new { id = item.IdElev }) |
                    @Html.ActionLink("Sterge", "Delete", new { id = item.IdElev })
                </td>
            </tr>
        }

    </table>
    </div>
