@model AplicCatalog.Models.IncadrareDiriginte

@{
    ViewBag.Title = "Adauga Diriginte";
}

<h2>Adauga Diriginte</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    {
        @Html.HiddenFor(model => model.Clasa.IdClasa)
     <div class="form-horizontal">
         <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            @Html.Label("Lista profesori", htmlAttributes: new { @class = "control-label col-md-2" })
         
        </div>
        <div class="form-group" style="height: 200px; overflow: auto;">
          
                <table>
                    <tr>
                        <th></th>
                        <th>
                            Nume
                        </th>

                    </tr>
                    @foreach (var profesor in ViewBag.listaProfesori)
                    {
                        <tr>
                            <td>
                                <input type="radio" class="radio" value=@profesor.IdProfesor name="profesoriSelectati" />
                            </td>
                            <td>
                                @profesor.Nume
                            </td>

                        </tr>
                    }
                </table>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Adauga" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}

<div>
    @Html.ActionLink("Inapoi la Lista", "Index")
</div>
